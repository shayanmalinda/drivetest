<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DriverRouteActivity2"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checkpoints"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnaddcheckpoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundbtnprimary"
                android:backgroundTint="@color/colorPrimary"
                android:text="Add a Location"
                android:textColor="@color/whiteText"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_add_location_white_24dp"
                android:paddingLeft="20dp"
                android:drawablePadding="-30dp"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#eee">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:id="@+id/checkpointlist"
            android:backgroundTint="#eee"
            android:background="@color/colorPrimary"
            android:divider="@android:color/transparent"
            android:dividerHeight="5.0sp"
            >


        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:textColor="#fff"
            android:text="Reset"
            android:background="@drawable/roundbtnaccent"
            android:textSize="19sp"
            android:id="@+id/btnReset"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:drawableStart="@drawable/ic_restore_white_24dp"
            android:paddingLeft="20dp"
            android:drawablePadding="-30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#fff"
            android:text="Done"
            android:background="@drawable/roundbtnprimary"
            android:textSize="19sp"
            android:id="@+id/btnDone"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:drawableStart="@drawable/ic_done_black_24dp"
            android:paddingLeft="20dp"
            android:drawablePadding="-30dp"/>
    </LinearLayout>

</LinearLayout>