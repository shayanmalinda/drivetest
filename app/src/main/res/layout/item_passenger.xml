<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_text_background_accent"
    android:layout_margin="15dp"
    android:padding="15dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/passengerId"
        android:textSize="18sp"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passengerName"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passengerEmail"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passengerAddress"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passengerPhone"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pickupLocation"
        android:textSize="18sp"/>

    <Button
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Ratings"
        android:background="@drawable/roundbtnprimary"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/whiteText"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:onClick="viewRatings"
        android:textSize="19sp"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_format_list_bulleted_white_24dp"/>

    <Button
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate NOW!"
        android:background="@drawable/roundbtnprimary"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/whiteText"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:onClick="newRating"
        android:textSize="19sp"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_comment_white_24dp"/>

    <Button
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Passenger"
        android:background="@drawable/roundbtnaccent"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/whiteText"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:onClick="removePassenger"
        android:textSize="19sp"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_delete_forever_white_24dp"/>

</LinearLayout>